<!doctype html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Hello, world!</title>
</head>

<body>

    <%- include('./partials/nav') %>

    <div class="container-fluid">
        <a href="/blog/newblog" class="btn btn-primary my-2">Add New Blog</a>
    </div>
    <div class="container-fluid">
        <div class="row">
            <% if(results.length>0) { %>
            <% results.forEach((el)=>{ %>
            <div class="col-sm-6 col-lg-4 col-md-6 my-2">
                <div class="card">
                    <img src="/uploads/<%= el.blogimage%>" class="card-img-top" alt=""
                        style="max-height: 300px;">
                    <div class="card-body">
                        <h3 class="card-title font-weight-bold"><%= el.blogtitle %></h3>
                        <h5 class="card-text text-muted mb-2"><%= new Date(el.blogdate).toLocaleDateString() %></h5>
                        <p class="card-text">
                            <%= el.blogdescription %>
                        </p>

                        <a href="/blog/eachblog/<%= el.blogid %>" class="btn btn-primary">Read More </a>
                        <a href="/blog/editblog/<%= el.blogid %>" class="btn btn-secondary">Edit</a>

                        <form action="/blog/deleteblog/<%= el.blogid %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            <% })%>
            <% } %>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>

</body>

</html>